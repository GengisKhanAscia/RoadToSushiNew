		<!-- REGISTRAZIONE DI UN UTENTE (cliente) -->
		<h3 class="hspace h_btm_spec"><cite title="Source Title"> Effettua il login </cite></h3>

		<div class="container">
			<div class="form-group">
				<div class="col-md-6 mx-auto">
					<form class="row g-3 needs-validation" id="formLogin" action="/login" method="POST"> 
							
						<!-- EMAIL -->
						<div>
							<label for="email" class="form-label">Email*</label>
							<input type="email" class="form-control" id="email" name="email" placeholder="Inserisci Email" required>
							<span class="text-danger" id="validazione-email"></span>
						</div>

						<!-- PASSWORD -->
						<div>
							<label for="password" class="form-label">Password*</label>
							<input type="password" class="form-control" id="password" name="password" placeholder="Inserisci Password" required>
							<span class="text-danger" id="validazione-password"></span>
						</div>
							
						<div class="col-12">
							<button class="btn btn-lg accedi_btn" id="accedi-btn">Accedi</button>
						</div>

					</form>
				</div>
			</div>
		</div>

