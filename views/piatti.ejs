<%- include('partials/head') -%>
<%- include('partials/navbar', { active: "piatti" }); -%>

<body>
        
	<main>

		<div class="container">
			<h3 class="spaziaturaTitolo" id="fond"><cite title="Source Title">I nostri piatti</cite></h3>

			<% if (message.length > 0) { %>
				<div class="alert alert-warning alert-dismissible fade show alertResizing" align="center" role="alert">
					<p>
						<%= message %>
					</p>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% } %>

			<div class="card" id="piatto_noresult" hidden>
				<div class="card-body">
				  <blockquote class="blockquote mb-0">
					<p class="text-light">Non abbiamo nessun piatto con quel nome o con quell'ingrediente.</p>
				  </blockquote>
				</div>
			</div>
		
			<div class="row">
				<% if (typeof piatti !== "undefined") { %> 
					<% if(piatti.length > 0) { %>
						<% piatti.forEach((piatto) => { %>
							<div class="card piatto mb-3">
								<img src="data:image/bmp;base64,<%= piatto.immagine.toString('base64')%>" class="card-img-top img-fluid rounded-start resizingPiatti"> <!-- height="30" width="30"> IMMAGINE PIATTO class = img-fluid rounded-start img-struttur.. -->
								<div class="card-body">
									<h3 class="card-title nome">
										<%= piatto.nome %>
									</h3> 
									<h6 class="card-text ingredienti">
										<%= piatto.ingredienti %>
									</h6> 
									<h4 class="card-text prezzo">
										<%= piatto.prezzo %> â‚¬ 
									</h4> 
								</div>
							</div>
						<% }); %>
					<% } %>
				<% } %>
			</div>

		</div>

	</main>
	
<%- include('partials/footer'); -%>      